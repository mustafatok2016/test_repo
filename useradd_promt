---
- name: create username and public key
  # gather_facts: no
  hosts: all
  become: true
  become_method: sudo
  user: centos
  vars_prompt:
    - name: username
      prompt: "What is your username?"
      private: no
      
  tasks:
    - debug:
        msg: 'Logging in as {{ username }}'
    - name: add users
      user:
        name: "{{username}}"
        state: present

    - name: Set authorized key took from file
      authorized_key:
        user: "{{ username }}"
        state: present
        key: "{{ lookup('file', '/home/ec2-user/.ssh/id_rsa.pub') }}"
